<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="Bookipo.controller.App">
    <Table id="bookTable" items="{path: '/'}">
        <columns>
            <Column>
                <Text text="{i18n>title}" />
            </Column>
            <Column>
                <Text text="{i18n>author}" />
            </Column>
            <Column>
                <Text text="{i18n>genre}" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{title}" />
                    <Text text="{author}" />
                    <Text text="{genre}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
    <Button text="Add Book" press="onAddBook" />
</mvc:View>
