<mvc:View controllerName="sap.ui.demo.controller.App" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
  <App id="app">
    <pages>
      <Page title="{i18n>home}">
        <content>
          <Button text="Switch Language" press="onSwitchLanguage" />
          <List id="bookList" items="{/Books}" itemPress="onItemPress">
            <StandardListItem title="{title}" description="{author}, {genre}" />
          </List>
        </content>
      </Page>
    </pages>
  </App>
</mvc:View>
